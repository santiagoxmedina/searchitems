<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="itemView"
            type="com.sanmed.searchitems.ui.main.IItemView" />
        <variable
            name="action"
            type="com.sanmed.searchitems.ui.main.IActionWithObject&lt;com.sanmed.searchitems.ui.main.IItemView>" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:onClick="@{()->action.onAction(itemView)}"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/message"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@{itemView.getName()}"
            tools:text="item name"
            android:layout_marginTop="@dimen/tiny_margin"
            android:textAppearance="?textAppearanceListItem"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
